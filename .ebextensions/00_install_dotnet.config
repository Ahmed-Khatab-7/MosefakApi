commands:
  01_download_dotnet:
    command: |
      if ! command -v dotnet &> /dev/null; then
        mkdir -p /tmp/dotnet
        wget https://download.visualstudio.microsoft.com/download/pr/68574b0e-d96a-4113-9daf-af5f0f1bf5e1/9ce0e24bed25b8318b1176fb117efe6e/dotnet-sdk-9.0.100-win-x64.exe -O /tmp/dotnet/dotnet-installer.exe
        chmod +x /tmp/dotnet/dotnet-installer.exe
        /tmp/dotnet/dotnet-installer.exe /install /quiet /norestart
        rm -rf /tmp/dotnet
      fi
  02_check_dotnet_version:
    command: dotnet --version